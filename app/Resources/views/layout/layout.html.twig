			<div class="row">
				<div class="span4 offset1">
					<h4>Informations</h4>
					<ul class="nav nav-stacked">
						{{ render(controller('PageBundle:Page:menu')) }}
						
					</ul>
				</div> 

				<div class="span4">
					<h4>Notre entrep√¥t</h4>
					<p><i class="icon-map-marker"></i>adresse : {{ adresse }}</p>
				</div>

